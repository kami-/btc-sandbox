{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "alwaysStrict": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist"
    },

    "include": [
        "./index.ts",
        "./src/**/*",
        "./test/**/*"
    ]
}
